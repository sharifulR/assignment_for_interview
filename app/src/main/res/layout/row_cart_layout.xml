<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/id_cartImage"
                    android:layout_width="66dp"
                    android:layout_height="78dp"
                    android:src="@drawable/product_img"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="14dp">
                <TextView
                    android:id="@+id/id_cartTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lays Classic Family Chips"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/id_cartPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="৳ 20.00"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#DA2079"/>
                <TextView
                    android:id="@+id/id_cartTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="৳ 100.00"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#DA2079"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFCCE4"
                    android:padding="3dp">
                    <ImageButton
                        android:id="@+id/cart_addButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_add_24"
                        android:background="@drawable/round_add_button"/>
                    <TextView
                        android:id="@+id/id_cartQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <ImageButton
                        android:id="@+id/id_cartSubButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_remove_24"
                        android:background="@drawable/rounded_sub_button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>